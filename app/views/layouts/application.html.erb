<!DOCTYPE html>
<html>
<head>
  <title>Unbound</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<a id="left-menu" href="#left-menu">Left Menu</a> 
<a id="right-menu" href="#right-menu">Right Menu</a>

<div id="left-menu">
  flefty
</div>
<div id="right-menu">
  flefty
</div>

<div id="sidebar-navs">
  <div class="sidebar-button">
    <%= link_to (image_tag "sidebar/user.png"), "#login-panel", :id => "login-panel" %>
  </div>
</div>

<div id="login-panel">
  <div id="quit">
    <a id="login-panel" href="#login-panel">QUIT</a>
  </div>
  Register login form
</div>
 
<script>
$(document).ready(function() {
    $('#left-menu').sidr({
      name: 'sidr-left',
      side: 'left' // By default
    });
    $('#right-menu').sidr({
      name: 'sidr-right',
      side: 'right'
    });
    $('#login-panel').sidr({
      name: 'sidr-right',
      side: 'right'
    });
});
</script>

	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if user_signed_in? %>
    	<%= current_user.email %>
    <% end %>

    <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>

<%= yield %>


</body>
</html>
